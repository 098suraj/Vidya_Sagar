<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragmentclass.quiz_info">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:src="@drawable/back"
                        android:padding="10dp"/>




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Fill In, "
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:layout_weight="1.5"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Quiz Details "
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:layout_weight="1"/>






                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/puzzle"/>






            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="50dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Quiz Title : "
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:fontFamily="@font/poppins"/>


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/quiztitle"
                            android:hint="Enter your title"
                            android:fontFamily="@font/poppins"/>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="No. of Questions  : "
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:fontFamily="@font/poppins"/>


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/nquestions"
                            android:hint="Integer Values"
                            android:inputType="numberSigned"
                            android:fontFamily="@font/poppins"/>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/stopwatch"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/poppins"
                                android:id="@+id/perquestion"
                                android:textColor="@color/black"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/barbackgroundempty"
                                android:gravity="center"
                                android:text="Per Question"
                                />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:layout_marginTop="10dp"
                                android:id="@+id/wholequiz"
                                android:background="@drawable/barbackgroundempty"
                                android:gravity="center"
                                android:text="Whole Quiz"
                                />





                        </LinearLayout>




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Time Duration  : "
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:fontFamily="@font/poppins"/>


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/timeduration"
                            android:hint="In Seconds Only"
                            android:inputType="numberSigned"
                            android:fontFamily="@font/poppins"/>




                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:text="Next"
                android:id="@+id/nextbtn"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#244AB5"
                android:background="@drawable/navigation_bar_background"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"/>

















        </LinearLayout>
    </ScrollView>

</FrameLayout>