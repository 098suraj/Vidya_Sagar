<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/intro"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:id="@+id/toogle"
                            android:layout_height="match_parent"
                            android:src="@drawable/menu"
                            android:padding="9dp"
                            android:layout_weight="1.6"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1.4"
                            android:layout_height="match_parent"
                            android:text="Hello,"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="#000000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Soumen!"
                            android:layout_weight="1"
                            android:textSize="30sp"
                            android:id="@+id/name"
                            android:fontFamily="@font/poppins"
                            android:textColor="#000000"/>


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/search"
                            android:padding="15dp"
                            android:layout_weight="1.3"/>




                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:id="@+id/grade"
                        android:fontFamily="@font/poppins"
                        android:text="Grade - 12TH D"/>



                </LinearLayout>








            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:layout_below="@id/intro"
                android:layout_marginLeft="10dp"
                android:id="@+id/bag"
                android:layout_marginRight="10dp"
                android:background="@drawable/navigation_bar_background"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/header"
                        android:gravity="center"
                        android:text="Check Your Bag"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold"
                        android:textSize="20sp"/>


                    <TextView
                        android:layout_width="200dp"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1.9"
                        android:background="@color/white"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/headerbutton"
                        android:text="Open Bag"
                        android:textColor="#0B5460"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold"
                        android:textSize="15sp"/>





                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:src="@drawable/schoolbag"/>





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bag"
                android:layout_marginTop="50dp"
                android:id="@+id/subjects"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold"
                        android:text="Subjects"
                        android:textColor="#000000"
                        android:textSize="23sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="All Subjects"
                        android:gravity="right"
                        android:textSize="15sp"
                        android:id="@+id/allsubjects"
                        android:layout_weight="2"
                        android:fontFamily="@font/poppins">

                    </TextView>


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/subject_recycle"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>



                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:id="@+id/addsubject"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:src="@drawable/plus"
                    android:background="@drawable/lightbluebackground"
                    android:layout_marginTop="20dp"
                    />





            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/mid"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/subjects"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@drawable/yellowbackground"
                    android:layout_alignParentBottom="true"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/dviewmodel"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">





                        <View
                            android:layout_width="match_parent"
                            android:layout_weight="2"
                            android:layout_height="match_parent">


                        </View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Visualize \n3D Models"
                            android:layout_weight="1"
                            android:padding="20dp"
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:gravity="center"
                            android:textColor="#7E0B0B" />

                    </LinearLayout>



                    <ImageView
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_height="match_parent"
                        android:src="@drawable/ar3dmodel"/>



                </LinearLayout>




















            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mid"
                android:layout_marginTop="50dp"
                android:id="@+id/quiz"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Pending Task's"
                        android:textSize="23sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Show All"
                        android:gravity="right"
                        android:textSize="15sp"
                        android:layout_weight="2"
                        android:fontFamily="@font/poppins">

                    </TextView>


                </LinearLayout>




                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/task_recycle"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:id="@+id/addtask"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/plus"
                    android:background="@drawable/lightbluebackground"
                    android:layout_marginTop="20dp"
                    />








            </LinearLayout>









        </RelativeLayout>
    </ScrollView>

</FrameLayout>