<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/custom_question_layout"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/linearhead"
            android:visibility="gone"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:src="@drawable/back"
                    android:padding="10dp"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="You're just 1 step behind,"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins"
                    android:layout_weight="1.5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="To publish your quiz!"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins"
                    android:layout_weight="1.5"/>






            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:padding="10dp"
                android:src="@drawable/celebrating"/>






        </LinearLayout>




        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cardback"
            android:background="@drawable/red_outlineborder"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Question - n"
                android:textSize="18sp"
                android:id="@+id/headtxt"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Enter your question"
                android:fontFamily="@font/poppins"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:id="@+id/question_et"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Option-1"
                android:textColor="@color/black"
                android:id="@+id/option1et"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins"
                android:textSize="15sp"
                android:gravity="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Option-2"
                android:textColor="@color/black"
                android:id="@+id/option2et"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins"
                android:textSize="15sp"
                android:gravity="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Option-3"
                android:id="@+id/option3et"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins"
                android:textSize="15sp"
                android:gravity="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/option4et"
                android:hint="Option-4"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins"
                android:textSize="15sp"
                android:gravity="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Correct Option"
                android:layout_marginLeft="10dp"
                android:id="@+id/correctanset"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textSize="15sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/lightgreenback"
                android:text="Save"
                android:id="@+id/lockbtn"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"/>













        </LinearLayout>

    </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Add"
            android:visibility="gone"
            android:cursorVisible="true"
            android:id="@+id/addbtn"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#244AB5"
            android:background="@drawable/navigation_bar_background"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>



</LinearLayout>


</LinearLayout>