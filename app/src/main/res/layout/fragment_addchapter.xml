<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edf0f5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentclass.addsubject">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:src="@drawable/back"
                        android:padding="10dp"/>




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Add Your, "
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:layout_weight="1.5"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Chapter "
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins"
                        android:layout_weight="1"/>






                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/puzzle"/>






            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="50dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Chapter Name : "
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:fontFamily="@font/poppins"/>


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/titlename"
                            android:hint="Enter your title"
                            android:fontFamily="@font/poppins"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Chapter Description"
                                android:layout_weight="1"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:padding="10dp"
                                android:src="@drawable/subjects"/>



                        </LinearLayout>



                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:id="@+id/description"
                            android:hint="A short abstract about chapter"
                            android:fontFamily="@font/poppins"/>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_gravity="center"
                        android:layout_height="200dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="3"
                            android:id="@+id/removepdfbtn"
                            android:visibility="gone"
                            android:src="@drawable/remove"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/browsepic"
                            android:visibility="visible"
                            android:padding="20dp"
                            android:src="@drawable/browsing"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/pdfpic"
                            android:padding="20dp"
                            android:visibility="gone"
                            android:src="@drawable/file"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.8"
                            android:text="Browse PDF"
                            android:id="@+id/browsebtn"
                            android:visibility="visible"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/barbackgroundempty"/>









                    </LinearLayout>











                </LinearLayout>











            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:text="Add"
                android:id="@+id/addbtn"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#244AB5"
                android:background="@drawable/navigation_bar_background"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"/>
















        </LinearLayout>
    </ScrollView>
</FrameLayout>