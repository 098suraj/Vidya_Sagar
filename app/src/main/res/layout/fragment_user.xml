<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#edf0f5"
    tools:context=".User">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/abstractlines"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Profile"
                android:id="@+id/profilehead"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"/>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_below="@+id/profilehead"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="150dp"
                app:cardCornerRadius="50dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="100dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Soumen"
                            android:id="@+id/frontname"
                            android:textColor="@color/black"
                            android:textSize="25sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins"
                            android:id="@+id/backname"
                            android:gravity="center_vertical"
                            android:text="Paul"
                            android:textSize="20sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:background="@drawable/barbackground"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:layout_weight="2"
                            android:src="@drawable/call"
                            android:gravity="center" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:id="@+id/phone"
                            android:text="8077570708"
                            android:textColor="@color/black"
                            android:textSize="15sp" />


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/black"/>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:background="@drawable/barbackground"
                            android:src="@drawable/map"
                            android:gravity="center" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:id="@+id/address"
                            android:text="8/502, Shanti Kutir , Adarsh Nagar , Golgate , Modinagar - 201204"
                            android:textColor="#000000"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/black"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:background="@drawable/barbackground"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:layout_weight="2"
                            android:src="@drawable/username"
                            android:gravity="center" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:id="@+id/username"
                            android:text="1000101@trmps01.edu"
                            android:textColor="@color/black"
                            android:textSize="15sp" />


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/navigation_bar_background"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:layout_weight="2"
                            android:src="@drawable/logout"
                            android:gravity="center" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Sign Out"
                            android:textColor="@color/black"
                            android:textSize="15sp" />


                    </LinearLayout>





                </LinearLayout>











            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_below="@+id/profilehead"
                android:layout_marginRight="10dp"
                android:background="@drawable/blueborder"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="50dp"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:background="@drawable/blueborder"
                    android:layout_height="match_parent"
                    android:padding="30dp"
                    android:src="@drawable/userdp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/editing"
                    android:padding="10dp"
                    android:layout_gravity="right"/>


            </androidx.cardview.widget.CardView>













        </RelativeLayout>









    </ScrollView>












</FrameLayout>